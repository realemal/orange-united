---
export interface Props {
  headline?: string;
  subhead?: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}

const {
  headline = "Parents and Schools. Together.",
  subhead = "Stay informed. Get involved. Make a difference in Orange.",
  ctaPrimary = { text: "Read Articles", href: "/articles" },
  ctaSecondary = { text: "Join the Email List", href: "#newsletter" },
} = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-white via-orange-50/30 to-white py-24 md:py-40">
  <!-- Modern gradient background -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-orange-100/40 via-transparent to-transparent"></div>
  
  <!-- Animated gradient orbs -->
  <div class="absolute top-0 -right-20 w-96 h-96 bg-orange-400/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-orange-300/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  
  <div class="container-custom relative">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-gray-900 mb-6 tracking-tight">
        {headline}
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto leading-relaxed">
        {subhead}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={ctaPrimary.href} class="group btn btn-primary text-lg px-10 py-5 shadow-lg shadow-orange-500/30 hover:shadow-xl hover:shadow-orange-500/40">
          {ctaPrimary.text}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href={ctaSecondary.href} class="btn btn-outline text-lg px-10 py-5 hover:shadow-lg transition-shadow">
          {ctaSecondary.text}
        </a>
      </div>
    </div>
  </div>
</section>

