---
// Language toggle component - Simple localStorage-based toggle
---

<div class="language-toggle">
  <button
    id="lang-toggle"
    class="flex items-center gap-2 px-4 py-2 text-sm font-bold text-gray-700 hover:text-orange-500 transition-colors rounded-lg hover:bg-orange-50 border border-gray-200"
    aria-label="Toggle language"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
    </svg>
    <span id="current-lang">EN</span>
  </button>
</div>

<script>
  function getCurrentLanguage() {
    return localStorage.getItem('language') || 'en';
  }

  function setLanguage(lang) {
    localStorage.setItem('language', lang);
    updateLanguageDisplay();
    applyTranslations(lang);
  }

  function updateLanguageDisplay() {
    const langSpan = document.getElementById('current-lang');
    const currentLang = getCurrentLanguage();
    if (langSpan) {
      langSpan.textContent = currentLang.toUpperCase();
    }
  }

  function applyTranslations(lang) {
    // Update page content based on language
    document.documentElement.lang = lang;
    
    // Dispatch event for other components
    window.dispatchEvent(new CustomEvent('languageChanged', { 
      detail: { language: lang } 
    }));
    
    // Apply translations to navigation
    const translations = {
      en: {
        'Home': 'Home',
        'About': 'About',
        'School Board': 'School Board',
        'Articles': 'Articles',
        'Events': 'Events',
        'Get Involved': 'Get Involved',
        'Contact': 'Contact',
        'Subscribe': 'Subscribe',
      },
      es: {
        'Home': 'Inicio',
        'About': 'Acerca de',
        'School Board': 'Junta Escolar',
        'Articles': 'Artículos',
        'Events': 'Eventos',
        'Get Involved': 'Participa',
        'Contact': 'Contacto',
        'Subscribe': 'Suscríbete',
      }
    };

    // Update navigation text
    document.querySelectorAll('nav a, header a').forEach(link => {
      const text = link.textContent?.trim();
      if (text && translations[lang][text]) {
        link.textContent = translations[lang][text];
      }
    });
  }

  function toggleLanguage() {
    const currentLang = getCurrentLanguage();
    const newLang = currentLang === 'en' ? 'es' : 'en';
    setLanguage(newLang);
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('lang-toggle');
    if (toggleButton) {
      toggleButton.addEventListener('click', toggleLanguage);
    }
    
    // Apply saved language
    const savedLang = getCurrentLanguage();
    updateLanguageDisplay();
    applyTranslations(savedLang);
  });
</script>

