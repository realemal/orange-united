---
const currentPath = Astro.url.pathname;

// Helper function to check if a path is active
function isActive(href: string, currentPath: string): boolean {
  if (href === '/') {
    return currentPath === '/' || currentPath === '';
  }
  return currentPath.startsWith(href);
}

const navItems = [
  { href: '/', label: 'Home' },
];
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
  <div class="container-custom">
    <div class="flex items-center justify-center py-3 gap-8">
      <!-- Logo -->
      <a href="/" class="group flex-shrink-0 flex items-center gap-3">
        <img 
          src="/logo.png?v=2" 
          alt="Orange United Logo" 
          class="w-12 h-12 sm:w-14 sm:h-14 object-contain transition-transform group-hover:scale-105"
        />
        <div class="hidden sm:block">
          <div class="text-lg font-bold text-gray-900 uppercase tracking-wide" style="font-family: 'Arial Black', sans-serif;">
            Orange United
          </div>
          <div class="text-xs text-orange-600 font-semibold tracking-wide">
            YOUR SCHOOLS â€¢ YOUR CHOICE
          </div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => {
          const active = isActive(item.href, currentPath);
          return (
            <a
              href={item.href}
              class={`px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all ${
                active
                  ? 'bg-orange-500 text-white shadow-md'
                  : 'text-gray-700 hover:bg-orange-50 hover:text-orange-600'
              }`}
              style="font-family: 'Arial Black', sans-serif;"
            >
              {item.label}
            </a>
          );
        })}
      </nav>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-gray-700 hover:text-orange-500 hover:bg-orange-50 rounded-lg transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-200 py-3">
      <div class="flex flex-col gap-1">
        {navItems.map((item) => {
          const active = isActive(item.href, currentPath);
          return (
            <a
              href={item.href}
              class={`px-4 py-3 rounded-lg text-sm font-bold uppercase tracking-wide transition-all ${
                active
                  ? 'bg-orange-500 text-white'
                  : 'text-gray-700 hover:bg-orange-50 hover:text-orange-600'
              }`}
              style="font-family: 'Arial Black', sans-serif;"
            >
              {item.label}
            </a>
          );
        })}
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>
