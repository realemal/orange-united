---
import LanguageToggle from './LanguageToggle.astro';

const currentPath = Astro.url.pathname;

// Helper function to check if a path is active
function isActive(href: string, currentPath: string): boolean {
  if (href === '/') {
    return currentPath === '/' || currentPath === '';
  }
  return currentPath.startsWith(href);
}

const navItems = [
  { href: '/', label: 'Home', labelEs: 'Inicio' },
  { href: '/about', label: 'About', labelEs: 'Acerca de' },
  { href: '/school-board', label: 'School Board', labelEs: 'Junta Escolar' },
  { href: '/articles', label: 'Articles', labelEs: 'Artículos' },
  { href: '/events', label: 'Events', labelEs: 'Eventos' },
  { href: '/get-involved', label: 'Get Involved', labelEs: 'Participa' },
  { href: '/contact', label: 'Contact', labelEs: 'Contacto' },
];
---

<header class="sticky top-0 z-50 bg-blue-dark-500 backdrop-blur-md border-b-2 border-orange-500/30 shadow-xl">
  <div class="container-custom">
    <!-- Header with logo on left, text centered -->
    <div class="relative flex items-center justify-between py-3 md:py-4">
      <!-- Logo on left -->
      <a href="/" class="group z-10 flex-shrink-0">
        <img 
          src="/logo.png?v=2" 
          alt="Orange United Logo" 
          class="w-16 h-16 sm:w-20 sm:h-20 lg:w-24 lg:h-24 object-contain transition-transform group-hover:scale-105 drop-shadow-xl"
        />
      </a>

      <!-- Centered branding text -->
      <a href="/" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-center hidden sm:block group">
        <div class="text-xl md:text-2xl lg:text-3xl font-black text-white uppercase tracking-wider transition-all" style="font-family: 'Arial Black', sans-serif; letter-spacing: 0.12em; -webkit-text-stroke: 2.5px black; text-stroke: 2.5px black; paint-order: stroke fill; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
          Orange United
        </div>
        <div class="text-xs md:text-sm lg:text-base text-orange-400 font-bold mt-1.5 tracking-wider" style="letter-spacing: 0.2em; text-shadow: 0 1px 2px rgba(0,0,0,0.2);">
          YOUR SCHOOLS • YOUR CHOICE
        </div>
      </a>

      <!-- Right side actions -->
      <div class="flex items-center gap-2 sm:gap-3 z-10">
        <div class="hidden sm:flex items-center gap-2 sm:gap-3">
          <LanguageToggle />
          <a href="#newsletter" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-5 py-2.5 rounded-lg font-bold text-xs sm:text-sm uppercase tracking-wide hover:from-orange-600 hover:to-orange-700 transition-all shadow-lg shadow-orange-500/40 hover:shadow-orange-500/60 active:scale-95">
            Subscribe
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 text-white hover:text-orange-400 hover:bg-blue-dark-600 rounded-lg transition-colors active:scale-95"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:block border-t border-orange-500/30">
      <div class="flex items-center justify-center gap-1.5 py-2.5">
        {navItems.map((item) => {
          const active = isActive(item.href, currentPath);
          return (
            <a
              href={item.href}
              class={`px-4 py-2 rounded-lg text-sm font-black uppercase tracking-wider transition-all ${
                active
                  ? 'bg-orange-500 text-white shadow-lg shadow-orange-500/50 scale-105'
                  : 'bg-orange-500/0 border-2 border-orange-500/30 text-orange-400 hover:bg-orange-500/25 hover:border-orange-500/60 hover:scale-105'
              }`}
              style="font-family: 'Arial Black', sans-serif; letter-spacing: 0.08em;"
              data-en={item.label}
              data-es={item.labelEs}
            >
              {item.label}
            </a>
          );
        })}
      </div>
    </nav>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-orange-500/30 py-4 bg-blue-dark-600 backdrop-blur-md">
      <div class="flex flex-col gap-2">
        {navItems.map((item) => {
          const active = isActive(item.href, currentPath);
          return (
            <a
              href={item.href}
              class={`px-4 py-3 rounded-lg text-sm font-black uppercase tracking-wider transition-all ${
                active
                  ? 'bg-orange-500 text-white shadow-lg'
                  : 'bg-orange-500/0 border-2 border-orange-500/30 text-orange-400 hover:bg-orange-500/25 hover:border-orange-500/60'
              }`}
              style="font-family: 'Arial Black', sans-serif; letter-spacing: 0.08em;"
              data-en={item.label}
              data-es={item.labelEs}
            >
              {item.label}
            </a>
          );
        })}
        <div class="flex sm:hidden items-center justify-between pt-4 border-t border-orange-500/30 mt-2">
          <LanguageToggle />
          <a href="#newsletter" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-4 py-2 rounded-lg font-bold text-sm uppercase tracking-wide shadow-lg">
            Subscribe
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>

