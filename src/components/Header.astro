---
import LanguageToggle from './LanguageToggle.astro';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home', labelEs: 'Inicio' },
  { href: '/about', label: 'About', labelEs: 'Acerca de' },
  { href: '/school-board', label: 'School Board', labelEs: 'Junta Escolar' },
  { href: '/articles', label: 'Articles', labelEs: 'Art√≠culos' },
  { href: '/events', label: 'Events', labelEs: 'Eventos' },
  { href: '/get-involved', label: 'Get Involved', labelEs: 'Participa' },
  { href: '/contact', label: 'Contact', labelEs: 'Contacto' },
];
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-lg border-b border-gray-200/50 shadow-sm">
  <div class="container-custom">
    <!-- Header with logo on left, text centered -->
    <div class="relative flex items-center justify-between py-4">
      <!-- Logo on left -->
      <a href="/" class="group z-10">
        <img 
          src="/logo.png" 
          alt="Orange United Logo" 
          class="w-20 h-20 sm:w-24 sm:h-24 lg:w-28 lg:h-28 object-contain transition-transform group-hover:scale-110"
        />
      </a>

      <!-- Centered branding text -->
      <a href="/" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-center hidden sm:block group">
        <div class="text-2xl lg:text-3xl font-bold text-gray-900 uppercase tracking-wide group-hover:text-orange-600 transition-colors" style="font-family: 'Arial Black', sans-serif; letter-spacing: 0.05em;">
          Orange United
        </div>
        <div class="text-base lg:text-lg text-orange-600 font-handwriting">
          Protecting Parent Choice
        </div>
      </a>

      <!-- Right side actions -->
      <div class="flex items-center gap-3 z-10">
        <div class="hidden sm:flex items-center gap-3">
          <LanguageToggle />
          <a href="#newsletter" class="btn btn-primary text-sm px-6 py-2.5">
            Subscribe
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 text-gray-700 hover:text-orange-500 hover:bg-orange-50 rounded-lg transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:block border-t border-gray-100">
      <div class="flex items-center justify-center gap-2 py-3">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-5 py-2.5 rounded-lg text-base font-bold uppercase tracking-wide transition-all ${
              currentPath === item.href
                ? 'bg-orange-500 text-white shadow-lg shadow-orange-500/30'
                : 'text-gray-700 hover:bg-orange-50 hover:text-orange-600'
            }`}
            style="font-family: 'Arial Black', sans-serif;"
            data-en={item.label}
            data-es={item.labelEs}
          >
            {item.label}
          </a>
        ))}
      </div>
    </nav>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-200 py-4">
      <div class="flex flex-col gap-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-4 py-3 rounded-lg text-base font-bold uppercase tracking-wide transition-all ${
              currentPath === item.href
                ? 'bg-orange-500 text-white'
                : 'text-gray-700 hover:bg-orange-50 hover:text-orange-600'
            }`}
            style="font-family: 'Arial Black', sans-serif;"
            data-en={item.label}
            data-es={item.labelEs}
          >
            {item.label}
          </a>
        ))}
        <div class="flex sm:hidden items-center justify-between pt-4 border-t border-gray-200 mt-2">
          <LanguageToggle />
          <a href="#newsletter" class="btn btn-primary">
            Subscribe
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>

