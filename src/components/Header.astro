---
import LanguageToggle from './LanguageToggle.astro';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home', labelEs: 'Inicio' },
  { href: '/about', label: 'About', labelEs: 'Acerca de' },
  { href: '/school-board', label: 'School Board', labelEs: 'Junta Escolar' },
  { href: '/articles', label: 'Articles', labelEs: 'Artículos' },
  { href: '/events', label: 'Events', labelEs: 'Eventos' },
  { href: '/get-involved', label: 'Get Involved', labelEs: 'Participa' },
  { href: '/contact', label: 'Contact', labelEs: 'Contacto' },
];
---

<header class="sticky top-0 z-50 bg-blue-dark-500/98 backdrop-blur-lg border-b-2 border-orange-500/20 shadow-lg">
  <div class="container-custom">
    <!-- Header with logo on left, text centered -->
    <div class="relative flex items-center justify-between py-4">
      <!-- Logo on left -->
      <a href="/" class="group z-10">
        <img 
          src="/logo.png" 
          alt="Orange United Logo" 
          class="w-20 h-20 sm:w-24 sm:h-24 lg:w-28 lg:h-28 object-contain transition-transform group-hover:scale-110 drop-shadow-lg"
        />
      </a>

      <!-- Centered branding text -->
      <a href="/" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-center hidden sm:block group">
        <div class="text-2xl lg:text-3xl font-bold text-white uppercase tracking-wider transition-colors" style="font-family: 'Arial Black', sans-serif; letter-spacing: 0.1em; -webkit-text-stroke: 2px black; text-stroke: 2px black; paint-order: stroke fill;">
          Orange United
        </div>
        <div class="text-sm lg:text-base text-orange-400 font-semibold mt-2 tracking-wide" style="letter-spacing: 0.15em;">
          YOUR SCHOOLS • YOUR CHOICE
        </div>
      </a>

      <!-- Right side actions -->
      <div class="flex items-center gap-3 z-10">
        <div class="hidden sm:flex items-center gap-3">
          <LanguageToggle />
          <a href="#newsletter" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-2.5 rounded-xl font-bold text-sm uppercase tracking-wide hover:from-orange-600 hover:to-orange-700 transition-all shadow-lg shadow-orange-500/30 hover:shadow-orange-500/50">
            Subscribe
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 text-white hover:text-orange-400 hover:bg-blue-dark-600 rounded-lg transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:block border-t border-orange-500/20">
      <div class="flex items-center justify-center gap-2 py-3">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-5 py-2.5 rounded-lg text-base font-bold uppercase tracking-wide transition-all ${
              currentPath === item.href
                ? 'bg-orange-500 text-white shadow-lg shadow-orange-500/40'
                : 'bg-orange-500/0 border-2 border-orange-500/30 text-orange-400 hover:bg-orange-500/20 hover:border-orange-500/50'
            }`}
            style="font-family: 'Arial Black', sans-serif;"
            data-en={item.label}
            data-es={item.labelEs}
          >
            {item.label}
          </a>
        ))}
      </div>
    </nav>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-orange-500/20 py-4 bg-blue-dark-600/95">
      <div class="flex flex-col gap-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-4 py-3 rounded-lg text-base font-bold uppercase tracking-wide transition-all ${
              currentPath === item.href
                ? 'bg-orange-500 text-white shadow-lg'
                : 'bg-orange-500/0 border-2 border-orange-500/30 text-orange-400 hover:bg-orange-500/20 hover:border-orange-500/50'
            }`}
            style="font-family: 'Arial Black', sans-serif;"
            data-en={item.label}
            data-es={item.labelEs}
          >
            {item.label}
          </a>
        ))}
        <div class="flex sm:hidden items-center justify-between pt-4 border-t border-orange-500/20 mt-2">
          <LanguageToggle />
          <a href="#newsletter" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-4 py-2 rounded-xl font-bold text-sm uppercase tracking-wide">
            Subscribe
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>

