---
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles');
const latest = allArticles
  .filter(a => a.data.status === 'published')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())[0];
---

{latest && (
  <a href={`/articles/${latest.slug}/`} class="block rounded-3xl bg-gradient-to-br from-orange-50 to-orange-100/50 border-2 border-orange-200 p-8 hover:shadow-xl hover:border-orange-300 transition-all group">
    <div class="flex items-center gap-2 mb-3">
      <span class="inline-block px-3 py-1 bg-orange-500 text-white text-xs font-bold uppercase tracking-wide rounded-full">
        Latest
      </span>
      <span class="text-xs text-gray-600">
        {new Date(latest.data.date).toLocaleDateString()}
      </span>
    </div>
    <h3 class="text-2xl md:text-3xl font-black text-gray-900 mb-3 group-hover:text-orange-600 transition-colors">
      {latest.data.title}
    </h3>
    <p class="text-gray-700 leading-relaxed mb-4">{latest.data.excerpt}</p>
    <span class="text-orange-600 font-semibold inline-flex items-center gap-2 group-hover:gap-3 transition-all">
      Read Article
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </span>
  </a>
)}

