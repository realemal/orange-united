---
import dayjs from 'dayjs';
import type { ComponentInstance } from 'astro';

export interface Props {
  title: string;
  date: Date;
  location: string;
  description: any;
  rsvpUrl?: string;
  isCanceled?: boolean;
}

const { title, date, location, description: Description, rsvpUrl, isCanceled } = Astro.props;
const formattedDate = dayjs(date).format('MMMM D, YYYY');
const formattedTime = dayjs(date).format('h:mm A');
---

<div class={`card p-6 ${isCanceled ? 'opacity-60' : ''}`}>
  <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2">
        <div class="flex flex-col items-center bg-orange-500 text-white rounded-lg p-3 min-w-[4rem]">
          <span class="text-sm font-semibold uppercase">
            {dayjs(date).format('MMM')}
          </span>
          <span class="text-2xl font-bold">
            {dayjs(date).format('D')}
          </span>
        </div>
        <div class="flex-1">
          <h3 class="text-xl font-bold text-gray-900 mb-1">
            {title}
            {isCanceled && (
              <span class="ml-2 inline-block bg-red-100 text-red-700 text-xs font-semibold px-2 py-1 rounded">
                Canceled
              </span>
            )}
          </h3>
          <div class="flex items-center gap-4 text-sm text-gray-600">
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {formattedTime}
            </span>
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {location}
            </span>
          </div>
        </div>
      </div>
      
      <div class="mt-4 text-gray-700 prose prose-sm max-w-none">
        <Description />
      </div>
    </div>
    
    {rsvpUrl && !isCanceled && (
      <a
        href={rsvpUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary whitespace-nowrap"
      >
        RSVP
      </a>
    )}
  </div>
</div>

