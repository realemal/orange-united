---
export interface Props {
  /** Use "light" on dark backgrounds (e.g. footer) for better contrast */
  variant?: 'default' | 'light';
}

const { variant = 'default' } = Astro.props;

const iconClass = variant === 'light'
  ? 'text-white/90 hover:text-orange-400 transition-colors'
  : 'text-gray-600 hover:text-orange-500 transition-colors';

const socials = [
  {
    name: 'X (Twitter)',
    url: 'https://twitter.com/orangeunitedca',
    icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z',
  },
  {
    name: 'Instagram',
    url: 'https://instagram.com/orangeunited.oc',
    icon: 'M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01M7.5 2h9a5.5 5.5 0 015.5 5.5v9a5.5 5.5 0 01-5.5 5.5h-9A5.5 5.5 0 012 16.5v-9A5.5 5.5 0 017.5 2z',
  },
  {
    name: 'Facebook',
    url: 'https://facebook.com/profile.php?id=61582066048374',
    icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z',
  },
];
---

<div class="flex items-center gap-4">
  {socials.map((social) => (
    <a
      href={social.url}
      target="_blank"
      rel="noopener noreferrer"
      class={iconClass}
      aria-label={social.name}
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d={social.icon}
        />
      </svg>
    </a>
  ))}
</div>

