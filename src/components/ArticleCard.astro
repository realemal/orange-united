---
import dayjs from 'dayjs';

export interface Props {
  title: string;
  slug: string;
  date: Date;
  excerpt: string;
  image?: string;
  category: string;
  featured?: boolean;
}

const { title, slug, date, excerpt, image, category, featured } = Astro.props;
const formattedDate = dayjs(date).format('MMMM D, YYYY');
---

<article class="card overflow-hidden h-full flex flex-col group hover:-translate-y-1 transition-all">
  {image && (
    <div class="relative overflow-hidden aspect-video bg-gradient-to-br from-gray-100 to-gray-50">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      />
      {featured && (
        <div class="absolute top-4 left-4 bg-gradient-to-r from-orange-500 to-orange-600 text-white px-4 py-1.5 rounded-full text-sm font-semibold shadow-lg">
          Featured
        </div>
      )}
    </div>
  )}
  
  <div class="p-6 flex flex-col flex-1">
    <div class="flex items-center gap-3 mb-3">
      <span class="text-xs font-semibold text-orange-500 uppercase tracking-wider">
        {category}
      </span>
      <span class="text-xs text-gray-500">
        {formattedDate}
      </span>
    </div>
    
    <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-orange-500 transition-colors line-clamp-2">
      <a href={`/articles/${slug}`} class="hover:underline">
        {title}
      </a>
    </h3>
    
    <p class="text-gray-600 mb-4 flex-1 line-clamp-3">
      {excerpt}
    </p>
    
    <a
      href={`/articles/${slug}`}
      class="text-orange-500 hover:text-orange-600 font-semibold text-sm inline-flex items-center gap-2 group/link"
    >
      Read more
      <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>

