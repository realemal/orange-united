---
// Email Submissions Viewer Component
// Fetches submissions via secure server-side endpoint

const page = Number(Astro.url.searchParams.get('page') || '1');
const formFilter = Astro.url.searchParams.get('form') || '';
const searchQuery = Astro.url.searchParams.get('q') || '';

let submissions: any[] = [];
let total = 0;
let error: string | null = null;

// Fetch from server-side endpoint (secure - uses SERVICE_ROLE)
try {
  const endpoint = new URL('/.netlify/functions/admin-submissions', Astro.site?.href || Astro.url.origin);
  endpoint.searchParams.set('page', page.toString());
  endpoint.searchParams.set('limit', '20');
  if (formFilter) endpoint.searchParams.set('form', formFilter);
  if (searchQuery) endpoint.searchParams.set('q', searchQuery);

  const response = await fetch(endpoint.toString());
  
  if (response.ok) {
    const data = await response.json();
    submissions = data.items || [];
    total = data.total || 0;
  } else {
    error = response.status === 404 ? 'Setup pending (function not deployed yet)' : 'Unable to fetch submissions';
  }
} catch (e) {
  error = 'Setup pending (complete Supabase configuration)';
}
---

<div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
    <svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>
    Email Submissions
  </h2>

  {error ? (
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 text-center">
      <svg class="w-12 h-12 text-yellow-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <p class="text-yellow-800 font-semibold mb-2">Supabase Not Configured</p>
      <p class="text-yellow-700 text-sm">
        Complete the Supabase setup to view email submissions here.
      </p>
      <a href="/SUPABASE_SETUP.md" target="_blank" class="inline-block mt-4 text-sm text-yellow-700 font-semibold hover:text-yellow-900">
        View Setup Guide →
      </a>
    </div>
  ) : submissions.length === 0 ? (
    <div class="text-center py-12 text-gray-500">
      <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
      </svg>
      <p class="text-lg font-semibold text-gray-700">No submissions yet</p>
      <p class="text-sm text-gray-500 mt-2">Email submissions will appear here once forms are submitted.</p>
    </div>
  ) : (
    <div class="space-y-4 max-h-[600px] overflow-y-auto">
      {submissions.map((submission) => (
        <div class="border border-gray-200 rounded-xl p-5 hover:border-orange-300 hover:bg-orange-50/30 transition">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
              <span class={`px-3 py-1 rounded-full text-xs font-semibold ${
                submission.form === 'newsletter' ? 'bg-blue-100 text-blue-700' :
                submission.form === 'contact' ? 'bg-green-100 text-green-700' :
                'bg-purple-100 text-purple-700'
              }`}>
                {submission.form || 'Unknown'}
              </span>
              <span class="text-sm text-gray-500">
                {new Date(submission.created_at).toLocaleDateString('en-US', { 
                  month: 'short', 
                  day: 'numeric', 
                  year: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                })}
              </span>
            </div>
          </div>
          
          <div class="space-y-2">
            {submission.name && (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="text-sm font-medium text-gray-900">{submission.name}</span>
              </div>
            )}
            
            {submission.email && (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href={`mailto:${submission.email}`} class="text-sm text-orange-600 hover:text-orange-700 font-medium">
                  {submission.email}
                </a>
              </div>
            )}
            
            {submission.message && (
              <div class="mt-3 pt-3 border-t border-gray-100">
                <p class="text-sm text-gray-700 line-clamp-3">
                  {submission.message}
                </p>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  )}

  {submissions.length > 0 && (
    <div class="mt-6 pt-6 border-t border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-3">
          <a 
            href="/.netlify/functions/admin-submissions-csv" 
            download
            class="btn btn-secondary inline-flex items-center gap-2 text-sm"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Export to CSV
          </a>
          <a 
            href="https://supabase.com/dashboard/project/xoptayfppsyfblbvbvoc/editor" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-orange-600 hover:text-orange-700 font-semibold inline-flex items-center gap-2"
          >
            View in Supabase
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
        <span class="text-sm text-gray-500">
          Showing {submissions.length} of {total} total
        </span>
      </div>
      
      {/* Pagination */}
      {total > 20 && (
        <div class="flex items-center justify-center gap-2">
          {page > 1 && (
            <a href={`?page=${page - 1}`} class="btn btn-secondary text-sm">
              ← Previous
            </a>
          )}
          <span class="text-sm text-gray-600">
            Page {page} of {Math.ceil(total / 20)}
          </span>
          {page < Math.ceil(total / 20) && (
            <a href={`?page=${page + 1}`} class="btn btn-secondary text-sm">
              Next →
            </a>
          )}
        </div>
      )}
    </div>
  )}
</div>

