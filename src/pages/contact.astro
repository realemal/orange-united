---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialIcons from '../components/SocialIcons.astro';
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with Orange United. Send us a message or connect on social media."
>
  <div class="bg-gradient-to-br from-orange-50 to-white py-12">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4" data-en="Contact Us" data-es="Contáctanos">
        Contact Us
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl" data-en="Have questions? Want to share your story? We'd love to hear from you." data-es="¿Tienes preguntas? ¿Quieres compartir tu historia? Nos encantaría saber de ti.">
        Have questions? Want to share your story? We'd love to hear from you.
      </p>
    </div>
  </div>

  <section class="py-12">
    <div class="container-custom max-w-4xl">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
          
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-4"
          >
            <input type="hidden" name="form-name" value="contact" />
            
            <!-- Honeypot -->
            <div class="hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </div>

            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
                Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              ></textarea>
            </div>

            <button type="submit" class="w-full btn btn-primary">
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Other Ways to Connect</h2>
          
          <div class="space-y-6">
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Email Us</h3>
              <p class="text-gray-600 mb-4">
                Have a question or want to get in touch?
              </p>
              <a href="mailto:info@orangeunited.org" class="text-orange-600 hover:text-orange-700 font-semibold text-lg flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                info@orangeunited.org
              </a>
            </div>

            <div class="card p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Follow Us on Social Media</h3>
              <p class="text-gray-600 mb-4">
                Stay updated with our latest posts, event announcements, and education news.
              </p>
              <SocialIcons />
            </div>

            <div class="card p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Subscribe to Newsletter</h3>
              <p class="text-gray-600 mb-4">
                Get weekly updates delivered straight to your inbox.
              </p>
              <a href="/#newsletter" class="btn btn-outline w-full">
                Subscribe Now
              </a>
            </div>

            <div class="card p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Attend Our Events</h3>
              <p class="text-gray-600 mb-4">
                Meet us in person at school board meetings and community gatherings.
              </p>
              <a href="/events" class="btn btn-outline w-full">
                View Events
              </a>
            </div>
          </div>

          <div class="mt-8 bg-orange-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Media Inquiries</h3>
            <p class="text-gray-700 text-sm">
              For press or media-related questions, please use the contact form above 
              and include "Media Inquiry" in the subject line.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

