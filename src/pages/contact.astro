---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialIcons from '../components/SocialIcons.astro';
import NewsletterForm from '../components/NewsletterForm.astro';

const CONTACT_EMAIL = 'ethan@orangeunited.org';
const RSVP_URL = 'https://docs.google.com/forms/d/e/1FAIpQLSeoUyvLPYixA-7IgVr3OwKNwDXIi8MjIe_57O9-mRaMhgDsYw/viewform?usp=dialog';
---

<BaseLayout
  title="Contact - Orange United"
  description="Get in touch with Orange United. Email, social media, newsletter, and events."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-b from-blue-dark-600 to-blue-dark-500 py-16 md:py-20">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-32 h-32 bg-orange-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-40 h-40 bg-orange-400 rounded-full blur-3xl"></div>
    </div>
    <div class="container-custom relative text-center">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-black text-white mb-4 tracking-tight">
        Contact
      </h1>
      <p class="text-lg md:text-xl text-blue-100 max-w-2xl mx-auto">
        Have questions? Want to get involved? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact content -->
  <section class="py-12 bg-gradient-to-b from-blue-dark-500 to-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Contact form -->
        <div class="bg-white rounded-2xl p-6 md:p-8 shadow-lg border border-gray-100">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Send us a message</h2>
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-4"
          >
            <input type="hidden" name="form-name" value="contact" />
            <div class="hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </div>
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 mb-1">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-semibold text-gray-700 mb-1">Subject</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-3 rounded-xl font-bold text-sm uppercase tracking-wide hover:from-orange-600 hover:to-orange-700 transition-all"
            >
              Send message
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact info -->
        <div class="space-y-4">
          <!-- Email -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Email</h3>
            <p class="text-gray-600 text-sm mb-3">Reach us directly for questions or to get involved.</p>
            <a
              href={`mailto:${CONTACT_EMAIL}`}
              class="inline-flex items-center gap-2 text-orange-600 hover:text-orange-700 font-semibold"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {CONTACT_EMAIL}
            </a>
          </div>

          <!-- Social -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Social</h3>
            <p class="text-gray-600 text-sm mb-4">Follow us for updates, events, and news.</p>
            <SocialIcons />
            <p class="text-gray-500 text-xs mt-3">Instagram: @orangeunited.oc</p>
          </div>

          <!-- Newsletter -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Newsletter</h3>
            <p class="text-gray-600 text-sm mb-4">Receive updates and communications.</p>
            <NewsletterForm title="" description="" compact={true} />
          </div>

          <!-- Events -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Events</h3>
            <p class="text-gray-600 text-sm mb-4">Join us at community meetings and kickoff events.</p>
            <a
              href={RSVP_URL}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-orange-600 text-white px-4 py-2 rounded-lg font-bold text-sm uppercase tracking-wide hover:from-orange-600 hover:to-orange-700 transition-all"
            >
              RSVP — January 28 Kickoff
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="/events" class="block mt-3 text-orange-600 hover:text-orange-700 font-semibold text-sm">View all events →</a>
          </div>

          <!-- Media -->
          <div class="bg-orange-50 rounded-xl p-4 border border-orange-100">
            <h3 class="text-sm font-bold text-gray-900 mb-1">Media inquiries</h3>
            <p class="text-gray-700 text-xs">
              For press or media questions, use the contact form above and put "Media Inquiry" in the subject line.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
