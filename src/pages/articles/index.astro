---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleList from '../../components/ArticleList.astro';

const allArticles = await getCollection('articles');
const publishedArticles = allArticles
  .filter(article => article.data.status === 'published')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get unique categories
const categories = [...new Set(allArticles.map(article => article.data.category))];
---

<BaseLayout
  title="Articles"
  description="Read the latest news, opinions, and updates on Orange education, school board meetings, and curriculum changes."
>
  <div class="bg-gray-50 py-12">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Articles
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl">
        Stay informed with our latest coverage of school board meetings, curriculum updates, and education policy.
      </p>
    </div>
  </div>

  <section class="py-12">
    <div class="container-custom">
      <!-- Category filter -->
      <div class="mb-8 flex flex-wrap gap-3">
        <a
          href="/articles"
          class="px-4 py-2 rounded-lg bg-orange-500 text-white font-semibold"
        >
          All Articles
        </a>
        {categories.map((category) => (
          <a
            href={`/articles?category=${encodeURIComponent(category)}`}
            class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 font-semibold transition-colors"
          >
            {category}
          </a>
        ))}
      </div>

      <!-- Articles grid -->
      {publishedArticles.length > 0 ? (
        <ArticleList articles={publishedArticles} />
      ) : (
        <div class="max-w-2xl mx-auto text-center py-20">
          <div class="bg-white rounded-3xl p-12 shadow-xl">
            <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Articles Coming Soon</h3>
            <p class="text-gray-600 mb-8 leading-relaxed">
              We're currently covering the latest school board meetings and preparing in-depth articles. 
              Subscribe to our newsletter to be notified when new content is published.
            </p>
            <a href="/#newsletter" class="btn btn-primary inline-flex items-center gap-2">
              Subscribe for Updates
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<script>
  // Client-side category filtering
  const urlParams = new URLSearchParams(window.location.search);
  const selectedCategory = urlParams.get('category');
  
  if (selectedCategory) {
    // Update active button
    const buttons = document.querySelectorAll('a[href*="category="]');
    buttons.forEach(button => {
      if (button.getAttribute('href')?.includes(selectedCategory)) {
        button.classList.remove('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
        button.classList.add('bg-orange-500', 'text-white');
      }
    });
  }
</script>

