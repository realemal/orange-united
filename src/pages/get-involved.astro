---
import BaseLayout from '../layouts/BaseLayout.astro';

const RSVP_URL = 'https://docs.google.com/forms/d/e/1FAIpQLSeoUyvLPYixA-7IgVr3OwKNwDXIi8MjIe_57O9-mRaMhgDsYw/viewform?usp=dialog';
---

<BaseLayout
  title="Get Involved - Orange United"
  description="Join Orange United and help shape the future of our schools. RSVP for our January 28 kickoff event."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-blue-dark-600 to-blue-dark-500 py-16 md:py-20">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-32 h-32 bg-orange-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-40 h-40 bg-orange-400 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container-custom relative text-center">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-black text-white mb-4 tracking-tight">
        Get Involved
      </h1>
      <p class="text-lg md:text-xl text-blue-100 max-w-2xl mx-auto">
        Orange is our home, and it's worth fighting for.
      </p>
    </div>
  </section>

  <!-- Main CTA -->
  <section class="py-12 bg-gradient-to-b from-blue-dark-500 to-gray-50">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto bg-white rounded-2xl p-8 shadow-lg text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Join Our January 28 Kickoff
        </h2>
        <p class="text-gray-600 mb-6">
          Connect with like-minded residents and take an active role in the future of our schools and our city.
        </p>
        <a 
          href={RSVP_URL}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-orange-600 text-white px-8 py-4 rounded-xl font-bold text-lg uppercase tracking-wide hover:from-orange-600 hover:to-orange-700 transition-all shadow-xl shadow-orange-500/30"
        >
          RSVP Now
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <p class="text-gray-500 text-sm mt-4">
          January 28, 2026 • 6:30–8:30 PM • Orange, CA
        </p>
      </div>
    </div>
  </section>

  <!-- Ways to Help -->
  <section class="py-12 bg-gray-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-8">
          Ways to Help
        </h2>
        <div class="grid sm:grid-cols-2 gap-4">
          <div class="flex items-start gap-4 bg-white rounded-xl p-5 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900 text-lg mb-1">Attend Events</h3>
              <p class="text-gray-600 text-sm">Show up to community meetings and board sessions.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 bg-white rounded-xl p-5 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900 text-lg mb-1">Volunteer</h3>
              <p class="text-gray-600 text-sm">Help with outreach, events, and community organizing.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 bg-white rounded-xl p-5 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900 text-lg mb-1">Share Updates</h3>
              <p class="text-gray-600 text-sm">Spread the word to neighbors, friends, and family.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 bg-white rounded-xl p-5 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900 text-lg mb-1">Canvass</h3>
              <p class="text-gray-600 text-sm">Talk to neighbors about what's happening in our schools.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section class="py-12 bg-blue-dark-600">
    <div class="container-custom text-center">
      <p class="text-lg text-blue-100">
        Questions? <a href="mailto:ethan@orangeunited.org" class="text-orange-400 hover:text-orange-300 font-semibold">ethan@orangeunited.org</a>
      </p>
    </div>
  </section>
</BaseLayout>
