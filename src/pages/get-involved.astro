---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
---

<BaseLayout
  title="Get Involved - Orange United"
  description="Get involved with Orange United. First canvas Monday, February 16th at 10 am. Subscribe for updates."
>
  <!-- Same theme as home: single column, dark blue, white cards -->
  <section class="min-h-screen flex items-center justify-center bg-blue-dark-600 py-16 md:py-20">
    <div class="container-custom">
      <div class="max-w-lg mx-auto">
        <!-- Header (same as home) -->
        <div class="border-b-4 border-orange-500 pb-6 mb-8">
          <div class="flex items-center gap-4 mb-4">
            <img src="/logo.png" alt="Orange United" class="w-16 h-16 object-contain" />
            <div>
              <h1 class="text-3xl md:text-4xl font-black text-white uppercase tracking-tight leading-tight">
                Get Involved
              </h1>
              <div class="h-1 w-16 bg-orange-500 mt-1"></div>
            </div>
          </div>
          <p class="text-blue-200 text-sm uppercase tracking-wider font-semibold">
            Civic Engagement • Transparency • Accountability
          </p>
        </div>

        <!-- First canvas announcement -->
        <div class="bg-white border-2 border-gray-900 p-8 mb-6">
          <div class="mb-4">
            <h2 class="text-xl font-black text-gray-900 uppercase tracking-tight mb-2">
              First canvas
            </h2>
            <div class="h-0.5 w-12 bg-orange-500 mb-3"></div>
            <p class="text-gray-900 font-bold text-lg">
              Monday, February 16th at 10 am
            </p>
            <p class="text-gray-600 text-sm mt-2">
              Join us to connect with the community and make a difference.
            </p>
          </div>
        </div>

        <!-- Same name + email signup as home -->
        <div class="bg-white border-2 border-gray-900 p-8 mb-6">
          <div class="mb-6">
            <h2 class="text-xl font-black text-gray-900 uppercase tracking-tight mb-2">
              Subscribe
            </h2>
            <div class="h-0.5 w-12 bg-orange-500 mb-3"></div>
            <p class="text-gray-600 text-sm font-medium">
              Receive updates and communications.
            </p>
          </div>
          <NewsletterForm 
            title=""
            description=""
            compact={false}
          />
        </div>

        <!-- Links (same style as home: Substack, Instagram, Contact) -->
        <div class="grid grid-cols-1 gap-3">
          <a
            href="https://substack.com/@orangeunited"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center justify-between bg-white border-2 border-gray-900 px-6 py-4 hover:bg-orange-500 hover:border-orange-500 transition-all"
          >
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 border-2 border-gray-900 flex items-center justify-center group-hover:border-white transition-colors">
                <svg class="w-5 h-5 text-gray-900 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z" />
                </svg>
              </div>
              <span class="font-black text-gray-900 group-hover:text-white uppercase text-sm tracking-wide transition-colors">
                Substack — @orangeunited
              </span>
            </div>
            <svg class="w-5 h-5 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>

          <a
            href="https://instagram.com/orangeunited.oc"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center justify-between bg-white border-2 border-gray-900 px-6 py-4 hover:bg-orange-500 hover:border-orange-500 transition-all"
          >
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 border-2 border-gray-900 flex items-center justify-center group-hover:border-white transition-colors">
                <svg class="w-5 h-5 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01M7.5 2h9a5.5 5.5 0 015.5 5.5v9a5.5 5.5 0 01-5.5 5.5h-9A5.5 5.5 0 012 16.5v-9A5.5 5.5 0 017.5 2z" />
                </svg>
              </div>
              <span class="font-black text-gray-900 group-hover:text-white uppercase text-sm tracking-wide transition-colors">
                Instagram
              </span>
            </div>
            <svg class="w-5 h-5 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>

          <a
            href="mailto:ethan@orangeunited.org"
            class="group flex items-center justify-between bg-white border-2 border-gray-900 px-6 py-4 hover:bg-orange-500 hover:border-orange-500 transition-all"
          >
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 border-2 border-gray-900 flex items-center justify-center group-hover:border-white transition-colors">
                <svg class="w-5 h-5 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <span class="font-black text-gray-900 group-hover:text-white uppercase text-sm tracking-wide transition-colors block">
                  Contact
                </span>
                <span class="text-xs text-gray-600 group-hover:text-white/90 transition-colors">
                  ethan@orangeunited.org
                </span>
              </div>
            </div>
            <svg class="w-5 h-5 text-gray-900 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
