---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
import SocialIcons from '../components/SocialIcons.astro';
---

<BaseLayout
  title="Orange United - Protecting Parent Choice"
  description="Parents and Schools. Together. Stay informed and get involved in Orange education."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-white via-orange-50/30 to-white py-24 md:py-40">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-orange-100/40 via-transparent to-transparent"></div>
    <div class="absolute top-0 -right-20 w-96 h-96 bg-orange-400/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-orange-300/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    
    <div class="container-custom relative">
      <div class="max-w-5xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-gray-900 mb-8 tracking-tight">
          Parents and Schools.<br/>
          <span class="text-orange-600">Together.</span>
        </h1>
        <p class="text-2xl md:text-3xl text-gray-600 mb-16 max-w-3xl mx-auto leading-relaxed font-light">
          Protecting parent choice in Orange education
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/school-board" class="group btn btn-primary text-lg px-12 py-6 shadow-lg shadow-orange-500/30 hover:shadow-xl hover:shadow-orange-500/40">
            Meet The School Board
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/articles" class="btn btn-outline text-lg px-12 py-6 hover:shadow-lg transition-shadow">
            Read Our Coverage
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why We Exist -->
  <section class="py-24 bg-white">
    <div class="container-custom max-w-3xl">
      <div class="text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8 tracking-tight">
          Why We Exist
        </h2>
        <p class="text-xl md:text-2xl text-gray-700 leading-relaxed mb-8">
          Parents who value <strong>academic excellence</strong> and <strong>transparency</strong> are currently <span class="text-red-600 font-bold">underrepresented 7-0</span> on the Orange school board.
        </p>
        <div class="mt-12 pt-12 border-t border-gray-200">
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            We cover every board meeting, track voting records, and help parents make their voices heard.
          </p>
          <a href="/about" class="text-orange-600 hover:text-orange-700 font-semibold text-lg">
            Learn more about our mission â†’
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stay Connected -->
  <section id="newsletter" class="relative py-24 bg-gradient-to-br from-orange-500 via-orange-600 to-orange-700 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    <div class="container-custom relative">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Stay Connected
        </h2>
        <p class="text-xl text-orange-100 mb-12 leading-relaxed">
          Get board meeting recaps, curriculum updates, and action alerts delivered to your inbox.
        </p>
        <div class="bg-white rounded-3xl p-8 shadow-2xl">
          <NewsletterForm />
        </div>
        <div class="mt-8 flex items-center justify-center gap-6">
          <span class="text-orange-100">Follow us:</span>
          <SocialIcons />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
