---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
import SocialIcons from '../components/SocialIcons.astro';
---

<BaseLayout
  title="Orange United - Protecting Parent Choice"
  description="Parents and Schools. Together. Stay informed and get involved in Orange education."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-orange-50 via-white to-orange-50/30 py-32 md:py-48">
    <!-- Orange gradient orbs -->
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-orange-400/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-orange-300/20 rounded-full blur-3xl"></div>
    
    <div class="container-custom relative">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black text-gray-900 mb-6 tracking-tight leading-none">
          Parents and Schools.<br/>
          <span class="text-orange-500">Together.</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-12 max-w-2xl mx-auto">
          Protecting parent choice in <span class="text-orange-600 font-semibold">Orange</span> education
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/school-board" class="group btn btn-primary text-base px-10 py-4 shadow-xl shadow-orange-500/30 hover:shadow-2xl hover:shadow-orange-500/40">
            Meet The School Board
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/articles" class="btn btn-outline text-base px-10 py-4 border-2">
            Read Coverage
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why We Exist -->
  <section class="py-32 bg-white">
    <div class="container-custom max-w-4xl">
      <div class="text-center">
        <h2 class="text-5xl md:text-6xl font-black text-gray-900 mb-12 tracking-tight">
          Why We <span class="text-orange-500">Exist</span>
        </h2>
        <div class="bg-gradient-to-br from-orange-50 to-white rounded-3xl p-12 md:p-16 shadow-lg border-2 border-orange-200">
          <p class="text-2xl md:text-3xl text-gray-800 leading-relaxed mb-8 font-light">
            Parents who value academic excellence and transparency are currently <strong class="text-gray-900">underrepresented 7-0</strong> on the Orange school board.
          </p>
          <div class="h-1 bg-gradient-to-r from-orange-200 via-orange-400 to-orange-200 rounded-full my-12"></div>
          <p class="text-xl text-gray-700 leading-relaxed mb-8">
            We cover every board meeting, track voting records, and help parents make their voices heard.
          </p>
          <a href="/school-board" class="btn btn-primary inline-flex items-center gap-2">
            See The Board
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stay Connected -->
  <section id="newsletter" class="py-32 bg-gradient-to-br from-gray-50 to-orange-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-5xl md:text-6xl font-black text-gray-900 mb-6 tracking-tight">
          Stay <span class="text-orange-500">Connected</span>
        </h2>
        <p class="text-xl text-gray-700 mb-12">
          Get board meeting recaps, curriculum updates, and action alerts.
        </p>
        <div class="bg-white rounded-3xl p-10 border-2 border-orange-200 shadow-xl shadow-orange-500/10">
          <NewsletterForm />
        </div>
        <div class="mt-10 flex flex-col items-center gap-4">
          <span class="text-sm text-gray-600 uppercase tracking-wider">Follow us on social</span>
          <SocialIcons />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
