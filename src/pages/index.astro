---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
import SocialIcons from '../components/SocialIcons.astro';
---

<BaseLayout
  title="Orange United - Protecting Parent Choice"
  description="Parents and Schools. Together. Stay informed and get involved in Orange education."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-white py-32 md:py-48">
    <!-- Subtle background gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-orange-50/50 via-white to-white"></div>
    
    <div class="container-custom relative">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black text-gray-900 mb-6 tracking-tight leading-none">
          Parents and Schools.<br/>
          <span class="text-orange-500">Together.</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto">
          Protecting parent choice in Orange education
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/school-board" class="group btn btn-primary text-base px-10 py-4 shadow-lg shadow-orange-500/20 hover:shadow-xl hover:shadow-orange-500/30">
            Meet The School Board
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/articles" class="btn btn-outline text-base px-10 py-4">
            Read Coverage
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why We Exist -->
  <section class="py-32 bg-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="text-center">
        <h2 class="text-5xl md:text-6xl font-black text-gray-900 mb-12 tracking-tight">
          Why We Exist
        </h2>
        <div class="bg-white rounded-3xl p-12 md:p-16 shadow-sm border border-gray-100">
          <p class="text-2xl md:text-3xl text-gray-800 leading-relaxed mb-8 font-light">
            Parents who value academic excellence and transparency are currently <span class="bg-red-100 text-red-700 px-3 py-1 rounded-lg font-bold">underrepresented 7-0</span> on the Orange school board.
          </p>
          <div class="h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent my-12"></div>
          <p class="text-xl text-gray-600 leading-relaxed">
            We cover every board meeting, track voting records, and help parents make their voices heard.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Stay Connected -->
  <section id="newsletter" class="py-32 bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-5xl md:text-6xl font-black text-gray-900 mb-6 tracking-tight">
          Stay Connected
        </h2>
        <p class="text-xl text-gray-600 mb-12">
          Get board meeting recaps, curriculum updates, and action alerts.
        </p>
        <div class="bg-gray-50 rounded-3xl p-10 border border-gray-200">
          <NewsletterForm />
        </div>
        <div class="mt-10 flex flex-col items-center gap-4">
          <span class="text-sm text-gray-500 uppercase tracking-wider">Or follow us</span>
          <SocialIcons />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
