---
import BaseLayout from '../layouts/BaseLayout.astro';
import EmailSubmissions from '../components/EmailSubmissions.astro';
import { getCollection } from 'astro:content';
import fs from 'node:fs';
import path from 'node:path';

// Get articles count
const articles = await getCollection('articles');
const publishedArticles = articles.filter(a => a.data.status === 'published');

// Get events count
const events = await getCollection('events');

// Get search index stats
let searchStats = { articles: 0, boardMembers: 0, generated: null };
try {
  const searchIndexPath = path.join(process.cwd(), 'src/data/search/index.json');
  if (fs.existsSync(searchIndexPath)) {
    const searchIndex = JSON.parse(fs.readFileSync(searchIndexPath, 'utf8'));
    searchStats = {
      articles: searchIndex.articles?.length || 0,
      boardMembers: searchIndex.boardMembers?.length || 0,
      generated: searchIndex.generated
    };
  }
} catch (e) {
  console.error('Error reading search index:', e);
}

// Get vote tracker stats
let voteStats = { meetings: 0, items: 0, votes: 0 };
try {
  const votesPath = path.join(process.cwd(), 'src/data/votes');
  if (fs.existsSync(votesPath)) {
    voteStats = {
      meetings: fs.existsSync(path.join(votesPath, 'meetings')) ? fs.readdirSync(path.join(votesPath, 'meetings')).filter(f => f.endsWith('.json')).length : 0,
      items: fs.existsSync(path.join(votesPath, 'items')) ? fs.readdirSync(path.join(votesPath, 'items')).filter(f => f.endsWith('.json')).length : 0,
      votes: fs.existsSync(path.join(votesPath, 'votes')) ? fs.readdirSync(path.join(votesPath, 'votes')).filter(f => f.endsWith('.json')).length : 0
    };
  }
} catch (e) {
  console.error('Error reading vote stats:', e);
}

// Get board members count
let boardMembersCount = 0;
try {
  const boardPath = path.join(process.cwd(), 'src/data/board-members.json');
  if (fs.existsSync(boardPath)) {
    const boardData = JSON.parse(fs.readFileSync(boardPath, 'utf8'));
    boardMembersCount = boardData.length;
  }
} catch (e) {
  console.error('Error reading board members:', e);
}
