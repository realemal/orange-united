---
import Seo from '../components/Seo.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/globals.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
}

const { title, description, image, article } = Astro.props;
const isProd = import.meta.env.PROD;
const fullTitle = title?.includes('Orange United') ? title : `${title} | Orange United`;
const ogImage = image || '/logo.png?v=2';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/logo.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="/logo.png?v=2" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logo.png?v=2" />
    <link rel="icon" type="image/png" href="/logo.png?v=2" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- SEO Meta Tags -->
    <Seo
      title={fullTitle}
      description={description}
      image={ogImage}
      article={article}
    />
    
    <!-- Open Graph -->
    <meta property="og:site_name" content="Orange United" />
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description || 'Transparent, accessible information about Orange Unified School District.'} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@orangeunitedca" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- Analytics - Plausible (privacy-friendly) -->
    {isProd && import.meta.env.PLAUSIBLE_DOMAIN && (
      <script defer data-domain={import.meta.env.PLAUSIBLE_DOMAIN} src="https://plausible.io/js/script.js"></script>
    )}
    
    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Skip to main content link for accessibility -->
    <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 bg-white border-2 border-orange-500 rounded-lg px-4 py-2 z-50 font-semibold">
      Skip to content
    </a>
    
    <Header />
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer />
    
    <!-- Translation system - loads on every page and applies immediately -->
    <script>
      import '../scripts/translate.js';
    </script>
    <script is:inline>
      // Ensure language is applied immediately on every page load
      (function() {
        'use strict';
        const STORAGE_KEY = 'orange-united-language';
        
        function getSavedLanguage() {
          try {
            return localStorage.getItem(STORAGE_KEY) || 'en';
          } catch (e) {
            return 'en';
          }
        }
        
        function applySavedLanguage() {
          try {
            const savedLang = getSavedLanguage();
            
            // Update HTML lang attribute immediately
            if (document.documentElement) {
              document.documentElement.setAttribute('lang', savedLang);
            }
            
            // Update language button display if it exists
            const langSpan = document.getElementById('current-lang');
            if (langSpan) {
              langSpan.textContent = savedLang.toUpperCase();
            }
            
            // Apply translations to all elements with data-en/data-es
            document.querySelectorAll('[data-en][data-es]').forEach((el) => {
              if (el instanceof HTMLElement) {
                if (savedLang === 'es' && el.dataset.es) {
                  el.textContent = el.dataset.es;
                } else if (el.dataset.en) {
                  el.textContent = el.dataset.en;
                }
              }
            });
          } catch (e) {
            console.warn('Language application error:', e);
          }
        }
        
        // Run immediately if DOM is ready, otherwise wait
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', applySavedLanguage);
        } else {
          // DOM already ready - apply immediately
          applySavedLanguage();
        }
        
        // Also listen for language changes
        window.addEventListener('languageChanged', function(e) {
          if (e.detail && e.detail.language) {
            applySavedLanguage();
          }
        });
      })();
    </script>
    
    <!-- Netlify Identity redirect handler -->
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity?.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity?.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>

